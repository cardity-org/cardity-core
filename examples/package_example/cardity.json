{
  "name": "@cardity/standard",
  "version": "1.0.0",
  "description": "Standard library for Cardity protocol development",
  "author": "Cardity Team <team@cardity.dev>",
  "license": "MIT",
  "repository": "https://github.com/cardity/standard",
  "homepage": "https://cardity.dev/standard",
  "bugs": "https://github.com/cardity/standard/issues",
  "keywords": [
    "cardity",
    "cardinals",
    "protocol",
    "standard",
    "library"
  ],
  "main": "src/index.cardity",
  "files": [
    "src/**/*.cardity",
    "dist/**/*.car",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@cardity/core": "^1.0.0",
    "@cardity/utils": "^1.0.0"
  },
  "devDependencies": {
    "@cardity/test": "^1.0.0",
    "@cardity/lint": "^1.0.0"
  },
  "scripts": {
    "build": "cardity build",
    "test": "cardity test",
    "lint": "cardity lint",
    "publish": "cardity publish",
    "clean": "rm -rf dist",
    "prepublishOnly": "cardity test && cardity build"
  },
  "engines": {
    "cardity": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "cardity": {
    "compiler": {
      "target": "cardinals",
      "optimize": true,
      "generateABI": true,
      "generateDocs": true
    },
    "runtime": {
      "version": "1.0.0",
      "compatibility": ["cardinals"]
    }
  }
} 